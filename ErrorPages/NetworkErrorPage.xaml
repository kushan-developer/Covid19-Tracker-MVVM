<Page
    x:Class="Async_MVVM.ErrorPages.NetworkErrorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Async_MVVM.ErrorPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NetworkErrorPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Source="../Assets/network_error.png" />
        <TextBlock
            Grid.Row="1"
            Width="280"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="26"
            FontWeight="SemiBold"
            Foreground="White"
            Text="Uh..Oh! Looks like you're not connected"
            TextAlignment="Center"
            TextWrapping="Wrap" />
    </Grid>
</Page>

